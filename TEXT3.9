#include<iostream>

int main()
{
    struct CandyBar
{
    char name[20];
    double weight;
    int calories;
};
    using namespace std;
    CandyBar *snack = new CandyBar[3]
    {
        {"Xuxixi",28.8,28},{"Elizhe",29.8,29},{"fenhua",30.8,30}
    };
    cout << "The snack[0]name is: " << snack->name << endl;
    cout << "The snack[0]weight is: " << snack->weight << endl;
    cout << "The snack[0]calories is: " << snack->calories << endl;
    cout << "The snack[1]name is: " << (snack + 1)->name << endl;
    cout << "The snack[1]weight is: " << (snack + 1)->weight << endl;
    cout << "The snack[1]calories is: " << (snack + 1)->calories << endl;
    cout << "The snack[2]name is: " << (snack + 2)->name<< endl;
    cout << "The snack[2]weight is: " << (snack + 2)->weight<< endl;
    cout << "The snack[2]calories is: " << (snack + 2)->calories << endl;
    system("pause");
    return 0;
}
