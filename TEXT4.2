#include<iostream>
#include<array>
const int ArSize = 16;
int main()
{
    using namespace std;
    array<long double,ArSize>arr;
    arr[0] = arr[1] = 1;
    for (int i = 2; i < ArSize; i++)
    {
        arr[i] = i*arr[i-1];
    }
    for (int j = 0; j < ArSize; j++)
    {
        cout << j << "!= " << arr[j] << endl;
    }
    system("pause");
    return 0;
}
