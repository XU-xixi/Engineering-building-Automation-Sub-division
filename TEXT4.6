#include<iostream>
const int month = 12;
const int year = 3;
int main()
{
    using namespace std;
    const char * Month[month] = 
    {
        "January", 
        "February", 
        "March", 
        "April",
        "May", 
        "June",
        "July", 
        "August", 
        "September", 
        "October",
        "November", 
        "December"
    };
    const char * Year[year] = 
    {
        "First", 
        "Second", 
        "Third"
    };
    int number[year][month];
    for (int i=0;i<year;i++)
    {
        for (int j=0;j<month;j++)
        {
            cout << Year[i] << " year's ";
            cout << Month[j] << " sales are: ";
            cin >> number[i][j];
        };
    };
    int sum = 0;
    for (int i=0;i<year;i++)
    {
        for (int j=0;j<month;j++)
        {
            sum = sum + number[i][j];
        };
    };
    cout << "The sum is: " << sum << endl;
    system("pause");
    return 0;
}
