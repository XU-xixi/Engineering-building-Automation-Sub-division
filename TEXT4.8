#include<iostream>
#include<cstring>
const int Arsize = 128;
int main()
{
    using namespace std;
    cout << "Enter words (to stop, type the word done)";
    char word[Arsize];
    int number = 0;
    cin >> word;
    while(strcmp(word,"done")!=0)
    {
        cin >> word;
        number++;
    };
    cout << "You entered a total of " << number << " words";
    system("pause");
    return 0;
}
